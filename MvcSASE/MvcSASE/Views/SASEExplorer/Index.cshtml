@model MvcSASE.Models.SASE

@{
    ViewBag.Title = "Index";
}

<h2>Azure Storage Explorer</h2>
<p />
<h4>Blobs Containers:</h4>
@Html.ActionLink("Createa ne", "CreateContainer")
@(" a new Container.")
<p />
<form>    
    @for (int i = 0; i < Model.accountService.SASEBlobContainerNames().Count(); i++)
    {
        <p />
        <a href="/SASEExplorer/Container?ContainerName=@Model.accountService.SASEBlobContainerNames()[i];saseid=blah;">@Model.accountService.SASEBlobContainerNames()[i]</a>
        @(" (");
        @Model.accountService.SASEBlobItems(Model.accountService.SASEBlobContainerNames().ElementAt(i)).Count();
        @(")  ");
    }
</form>
<p />
<h4>Queues: </h4>
@Html.ActionLink("Create", "CreateQueue")
@(" a new Queue.")
<p />
<form>
    @for (int i = 0; i < Model.accountService.SASEQueueCount(); i++)
    {
        <p />
        @Html.ActionLink(Model.accountService.SASEQueueNames().ElementAt(i), "Queue","SASEExplorer", new { queueName = Model.accountService.SASEQueueNames()[i] })
        @(" (");
        @Model.accountService.SASEQueueMessageCount(Model.accountService.SASEQueueNames().ElementAt(i));
        @(")  ");
    }
</form>
