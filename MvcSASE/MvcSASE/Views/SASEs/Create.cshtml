@using Microsoft.AspNet.Identity
@model SASELibrary.AccountService

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()

    using (Html.BeginForm("Create",
                        "SASEs",
                        FormMethod.Post,
                        new { enctype = "multipart/form-data" }))
    {
        <div class="form-horizontal">
            <h4>SASE Storage Account</h4>
            <hr />
            <div class="form-group">
                <label for="storageAccount" class="control-label col-md-2">Storage Account:</label>
                <div class="col-md-10">
                    <input type="text" name="storageAccount" id="storageAccount" class="form-control" /><br>
                </div>
            </div>
            <div class="form-group">
                <label for="storageKey" class="control-label col-md-2">Storage Key:</label>
                <div class="col-md-10">
                    <input type="text" name="storageKey" id="storageKey" class="form-control" /><br>
                </div>
            </div>
            <div class="form-group">
                <label for="accountType" class="control-label col-md-2">Account Type:</label>
                <div class="col-md-10">
                    <input type="radio" name="accountType" id="accountType" value="Azure" checked />Azure<br />
                    <input type="radio" name="accountType" id="accountType" value="AWS" />AWS<br /><br />
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="hidden" name="userEmail" id="userEmail" value="@User.Identity.GetUserName().ToString()" />
                    <input type="submit" value="Create Storage Account" />
                </div>
            </div>
        </div>
    }
}
<hr />
<div>
    @Html.ActionLink("Back to Storage Accounts", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
